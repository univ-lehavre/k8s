# Longhorn Helm Values
# Generated by Ansible

defaultSettings:
  # Data path on nodes
  defaultDataPath: {{ longhorn_data_path }}

  # Default replica count
  defaultReplicaCount: {{ longhorn_default_replica_count }}

  # Data locality
  defaultDataLocality: {{ longhorn_data_locality }}

  # Create default disk on labeled nodes
  createDefaultDiskLabeledNodes: {{ longhorn_create_default_disk_labeled_nodes | lower }}

  # Backup settings
  backupTarget: ""
  backupTargetCredentialSecret: ""

# Manager resources
longhornManager:
  resources:
    requests:
      cpu: {{ longhorn_resources.manager.requests.cpu }}
      memory: {{ longhorn_resources.manager.requests.memory }}
    limits:
      cpu: {{ longhorn_resources.manager.limits.cpu }}
      memory: {{ longhorn_resources.manager.limits.memory }}

# UI
ui:
  enabled: {{ longhorn_ui_enabled | lower }}
