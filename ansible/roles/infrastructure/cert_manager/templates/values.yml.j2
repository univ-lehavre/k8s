# Cert-Manager Helm Values
# Generated by Ansible

installCRDs: {{ cert_manager_install_crds | lower }}

replicaCount: 1

resources:
  requests:
    cpu: {{ cert_manager_resources.requests.cpu }}
    memory: {{ cert_manager_resources.requests.memory }}
  limits:
    cpu: {{ cert_manager_resources.limits.cpu }}
    memory: {{ cert_manager_resources.limits.memory }}

webhook:
  timeoutSeconds: {{ cert_manager_webhook_timeout_seconds }}
  resources:
    requests:
      cpu: 25m
      memory: 32Mi
    limits:
      cpu: 100m
      memory: 64Mi

cainjector:
  resources:
    requests:
      cpu: 25m
      memory: 64Mi
    limits:
      cpu: 100m
      memory: 128Mi

# Prometheus metrics
prometheus:
  enabled: {{ monitoring_enabled | default(true) | lower }}
  servicemonitor:
    enabled: {{ monitoring_enabled | default(true) | lower }}

# Global settings
global:
  leaderElection:
    namespace: {{ cert_manager_namespace }}
