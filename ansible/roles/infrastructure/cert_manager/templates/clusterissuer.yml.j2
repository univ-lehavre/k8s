# ClusterIssuer: {{ issuer.name }}
# Generated by Ansible
apiVersion: cert-manager.io/v1
kind: ClusterIssuer
metadata:
  name: {{ issuer.name }}
spec:
{% if issuer.type == 'selfsigned' %}
  selfSigned: {}
{% elif issuer.type == 'acme' %}
  acme:
    server: {{ issuer.server }}
    email: {{ issuer.email }}
    privateKeySecretRef:
      name: {{ issuer.name }}-account-key
    solvers:
{% if cert_manager_dns01_enabled %}
      - dns01:
          # Configure DNS01 solver based on provider
          cloudflare:
            email: {{ issuer.email }}
            apiTokenSecretRef:
              name: cloudflare-api-token
              key: api-token
{% else %}
      - http01:
          ingress:
            class: {{ cert_manager_http01_ingress_class }}
{% endif %}
{% endif %}
