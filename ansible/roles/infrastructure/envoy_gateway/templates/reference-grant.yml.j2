---
# ReferenceGrant allows HTTPRoutes from service namespaces
# to reference the main Gateway
apiVersion: gateway.networking.k8s.io/v1beta1
kind: ReferenceGrant
metadata:
  name: allow-routes-to-gateway
  namespace: {{ envoy_gateway_namespace }}
spec:
  from:
{% for ns in gateway_route_namespaces %}
    - group: gateway.networking.k8s.io
      kind: HTTPRoute
      namespace: {{ ns }}
{% endfor %}
  to:
    - group: gateway.networking.k8s.io
      kind: Gateway
      name: {{ gateway_name }}
