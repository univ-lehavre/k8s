---
# HTTP to HTTPS redirect route
# Catches all HTTP traffic on the http listener and redirects to HTTPS
apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: http-to-https-redirect
  namespace: {{ envoy_gateway_namespace }}
spec:
  parentRefs:
    - name: {{ gateway_name }}
      namespace: {{ envoy_gateway_namespace }}
      sectionName: http
  rules:
    - filters:
        - type: RequestRedirect
          requestRedirect:
            scheme: https
            statusCode: 301
