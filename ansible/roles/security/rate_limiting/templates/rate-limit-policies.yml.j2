# Per-service rate limiting annotations
# Applied via Ingress annotations for Cilium

---
# Authentik rate limiting
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: authentik-rate-limited
  namespace: authentik
  annotations:
    cilium.io/rate-limit: "{{ rate_limiting_services.authentik.rps | default(rate_limiting_default_rps) }}"
    cilium.io/rate-limit-burst: "{{ rate_limiting_services.authentik.burst | default(rate_limiting_default_burst) }}"
spec:
  ingressClassName: cilium
  rules:
    - host: "auth.{{ domain }}"
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: authentik-server
                port:
                  number: 9000
  tls:
    - hosts:
        - "auth.{{ domain }}"
      secretName: authentik-tls

