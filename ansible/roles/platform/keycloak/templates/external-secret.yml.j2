# ExternalSecret for Keycloak â€” syncs secrets from Vault via ESO
# Generated by Ansible
---
apiVersion: external-secrets.io/v1beta1
kind: ExternalSecret
metadata:
  name: keycloak-secrets
  namespace: {{ keycloak_namespace }}
  labels:
    app.kubernetes.io/name: keycloak
    app.kubernetes.io/component: identity
    app.kubernetes.io/managed-by: external-secrets
    security.atlas/rotation-enabled: "true"
spec:
  refreshInterval: {{ keycloak_eso_refresh_interval }}
  secretStoreRef:
    name: vault-backend
    kind: ClusterSecretStore
  target:
    name: keycloak-credentials
    creationPolicy: Owner
    deletionPolicy: Retain
    template:
      type: Opaque
      metadata:
        labels:
          security.atlas/rotated: "true"
  data:
    - secretKey: admin-password
      remoteRef:
        key: {{ keycloak_vault_path }}
        property: admin-password
---
apiVersion: external-secrets.io/v1beta1
kind: ExternalSecret
metadata:
  name: keycloak-db-secrets
  namespace: {{ keycloak_namespace }}
  labels:
    app.kubernetes.io/name: keycloak
    app.kubernetes.io/component: database
    app.kubernetes.io/managed-by: external-secrets
spec:
  refreshInterval: {{ keycloak_eso_refresh_interval }}
  secretStoreRef:
    name: vault-backend
    kind: ClusterSecretStore
  target:
    name: keycloak-db-credentials
    creationPolicy: Owner
    deletionPolicy: Retain
  data:
    - secretKey: password
      remoteRef:
        key: secret/databases/postgresql
        property: keycloak-password
