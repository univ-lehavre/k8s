# ExternalSecret for Authelia - syncs secrets from Vault via ESO
# Generated by Ansible
apiVersion: external-secrets.io/v1beta1
kind: ExternalSecret
metadata:
  name: authelia-secrets
  namespace: {{ authelia_namespace }}
  labels:
    app.kubernetes.io/name: authelia
    app.kubernetes.io/component: authentication
    app.kubernetes.io/managed-by: external-secrets
    security.atlas/rotation-enabled: "true"
spec:
  refreshInterval: {{ authelia_eso_refresh_interval }}
  secretStoreRef:
    name: vault-backend
    kind: ClusterSecretStore
  target:
    name: authelia-secrets
    creationPolicy: Owner
    deletionPolicy: Retain
    template:
      type: Opaque
      metadata:
        labels:
          security.atlas/rotated: "true"
  data:
    - secretKey: JWT_TOKEN
      remoteRef:
        key: {{ authelia_vault_path }}
        property: jwt-token
    - secretKey: SESSION_SECRET
      remoteRef:
        key: {{ authelia_vault_path }}
        property: session-secret
    - secretKey: STORAGE_ENCRYPTION_KEY
      remoteRef:
        key: {{ authelia_vault_path }}
        property: storage-encryption-key
{% if authelia_oidc_enabled | default(false) %}
    - secretKey: OIDC_HMAC_SECRET
      remoteRef:
        key: {{ authelia_vault_path }}
        property: oidc-hmac-secret
    - secretKey: OIDC_PRIVATE_KEY
      remoteRef:
        key: {{ authelia_vault_path }}
        property: oidc-private-key
{% endif %}
{% if authelia_redis_enabled %}
    - secretKey: REDIS_PASSWORD
      remoteRef:
        key: secret/databases/redis
        property: password
{% endif %}
{% if authelia_storage_backend == 'postgres' %}
    - secretKey: STORAGE_POSTGRES_PASSWORD
      remoteRef:
        key: secret/databases/postgresql
        property: authelia-password
{% endif %}
