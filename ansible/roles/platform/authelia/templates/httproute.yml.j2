---
# Authelia HTTPRoute for Gateway API
# Exposes the Authelia login portal
apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: authelia
  namespace: {{ authelia_namespace }}
  labels:
    app.kubernetes.io/name: authelia
    app.kubernetes.io/component: httproute
spec:
  parentRefs:
    - name: {{ gateway_name | default('atlas-gateway') }}
      namespace: {{ envoy_gateway_namespace | default('envoy-gateway-system') }}
  hostnames:
    - {{ authelia_host }}
  rules:
    - matches:
        - path:
            type: PathPrefix
            value: /
      backendRefs:
        - name: authelia
          port: 9091

---
# Certificate for Authelia (if not using wildcard)
{% if not (gateway_wildcard_enabled | default(true)) %}
apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: authelia-tls
  namespace: {{ authelia_namespace }}
spec:
  secretName: authelia-tls
  issuerRef:
    name: {{ authelia_ingress_issuer }}
    kind: ClusterIssuer
  dnsNames:
    - {{ authelia_host }}
{% endif %}
