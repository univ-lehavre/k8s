---
# SecurityPolicy template for Envoy Gateway forward auth
# Include this in your service role to enable Authelia authentication
#
# Usage in service tasks:
#   - name: Create SecurityPolicy for forward auth
#     kubernetes.core.k8s:
#       state: present
#       definition: "{{ lookup('template', '../../platform/authelia/templates/security-policy.yml.j2') | from_yaml }}"
#     vars:
#       target_httproute_name: myservice
#       target_httproute_namespace: myservice-ns
#
apiVersion: gateway.envoyproxy.io/v1alpha1
kind: SecurityPolicy
metadata:
  name: "{{ target_httproute_name }}-auth"
  namespace: "{{ target_httproute_namespace }}"
  labels:
    app.kubernetes.io/name: "{{ target_httproute_name }}"
    app.kubernetes.io/component: security-policy
spec:
  targetRefs:
    - group: gateway.networking.k8s.io
      kind: HTTPRoute
      name: "{{ target_httproute_name }}"
  extAuth:
    http:
      backendRefs:
        - name: authelia
          namespace: {{ authelia_namespace | default('authelia') }}
          port: 9091
      path: /api/authz/ext-authz
      headersToBackend:
        - Remote-User
        - Remote-Groups
        - Remote-Email
        - Remote-Name
    headersToExtAuth:
      - cookie
      - authorization
      - proxy-authorization
      - accept
      - x-forwarded-proto
      - x-forwarded-host
      - x-forwarded-uri
      - x-forwarded-for
    failOpen: false
