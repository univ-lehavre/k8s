# Authentik Ingress
# Generated by Ansible
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: authentik
  namespace: {{ authentik_namespace }}
  annotations:
    cert-manager.io/cluster-issuer: {{ authentik_ingress_issuer }}
spec:
  ingressClassName: {{ authentik_ingress_class }}
  tls:
    - hosts:
        - {{ authentik_ingress_host }}
      secretName: {{ authentik_ingress_tls_secret }}
  rules:
    - host: {{ authentik_ingress_host }}
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: authentik-server
                port:
                  number: 80
