# Vault HTTPRoute with Forward Auth via Authelia
# Generated by Ansible - Gateway API

# Unprotected API routes (health checks, token-based auth for ESO/CLI)
apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: vault-api
  namespace: {{ vault_namespace }}
  labels:
    app.kubernetes.io/name: vault
    app.kubernetes.io/component: httproute-api
spec:
  parentRefs:
    - name: {{ gateway_name | default('atlas-gateway') }}
      namespace: {{ envoy_gateway_namespace | default('envoy-gateway-system') }}
  hostnames:
    - {{ vault_ingress_host }}
  rules:
    - matches:
        - path:
            type: PathPrefix
            value: /v1/sys/health
      backendRefs:
        - name: vault
          port: 8200
    - matches:
        - path:
            type: PathPrefix
            value: /v1/auth/
      backendRefs:
        - name: vault
          port: 8200
    - matches:
        - path:
            type: PathPrefix
            value: /v1/secret/
      backendRefs:
        - name: vault
          port: 8200
    - matches:
        - path:
            type: PathPrefix
            value: /v1/sys/
      backendRefs:
        - name: vault
          port: 8200

---
# Protected UI route (requires Authelia)
apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: vault
  namespace: {{ vault_namespace }}
  labels:
    app.kubernetes.io/name: vault
    app.kubernetes.io/component: httproute
spec:
  parentRefs:
    - name: {{ gateway_name | default('atlas-gateway') }}
      namespace: {{ envoy_gateway_namespace | default('envoy-gateway-system') }}
  hostnames:
    - {{ vault_ingress_host }}
  rules:
    - matches:
        - path:
            type: PathPrefix
            value: /
      backendRefs:
        - name: vault
          port: 8200

{% if vault_forward_auth_enabled | default(true) %}
---
# SecurityPolicy for forward auth via Authelia
apiVersion: gateway.envoyproxy.io/v1alpha1
kind: SecurityPolicy
metadata:
  name: vault-auth
  namespace: {{ vault_namespace }}
  labels:
    app.kubernetes.io/name: vault
    app.kubernetes.io/component: security-policy
spec:
  targetRefs:
    - group: gateway.networking.k8s.io
      kind: HTTPRoute
      name: vault
  extAuth:
    http:
      backendRefs:
        - name: authelia
          namespace: {{ authelia_namespace | default('authelia') }}
          port: 9091
      path: /api/authz/ext-authz
      headersToBackend:
        - Remote-User
        - Remote-Groups
        - Remote-Email
        - Remote-Name
    headersToExtAuth:
      - cookie
      - authorization
      - proxy-authorization
      - x-forwarded-proto
      - x-forwarded-host
      - x-forwarded-uri
      - x-forwarded-for
    failOpen: false
{% endif %}
