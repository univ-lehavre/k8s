# Vault Ingress
# Generated by Ansible
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: vault
  namespace: {{ vault_namespace }}
  annotations:
    cert-manager.io/cluster-issuer: {{ vault_ingress_issuer }}
spec:
  ingressClassName: {{ vault_ingress_class }}
  tls:
    - hosts:
        - {{ vault_ingress_host }}
      secretName: {{ vault_ingress_tls_secret }}
  rules:
    - host: {{ vault_ingress_host }}
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: vault-ui
                port:
                  number: 8200
