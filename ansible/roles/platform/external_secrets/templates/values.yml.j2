# External Secrets Operator Helm Values
# Generated by Ansible

installCRDs: {{ external_secrets_install_crds | lower }}

replicaCount: 1

resources:
  requests:
    cpu: {{ external_secrets_resources.requests.cpu }}
    memory: {{ external_secrets_resources.requests.memory }}
  limits:
    cpu: {{ external_secrets_resources.limits.cpu }}
    memory: {{ external_secrets_resources.limits.memory }}

webhook:
  replicaCount: 1
  resources:
    requests:
      cpu: 25m
      memory: 32Mi
    limits:
      cpu: 50m
      memory: 64Mi

certController:
  replicaCount: 1
  resources:
    requests:
      cpu: 25m
      memory: 32Mi
    limits:
      cpu: 50m
      memory: 64Mi

# ServiceMonitor for Prometheus
serviceMonitor:
  enabled: {{ monitoring_enabled | default(true) | lower }}
