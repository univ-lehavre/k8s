# ClusterSecretStore for Vault backend
# Generated by Ansible
apiVersion: external-secrets.io/v1beta1
kind: ClusterSecretStore
metadata:
  name: {{ external_secrets_cluster_store_name }}
spec:
  provider:
    vault:
      server: {{ external_secrets_vault_server }}
      path: {{ external_secrets_vault_path }}
      version: {{ external_secrets_vault_version }}
      auth:
        kubernetes:
          mountPath: kubernetes
          role: external-secrets
          serviceAccountRef:
            name: external-secrets-vault
            namespace: {{ external_secrets_namespace }}
