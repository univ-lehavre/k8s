# Mattermost Ingress
# Generated by Ansible
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: mattermost
  namespace: {{ mattermost_namespace }}
  annotations:
    cert-manager.io/cluster-issuer: {{ mattermost_ingress_issuer }}
    nginx.ingress.kubernetes.io/proxy-body-size: 50m
spec:
  ingressClassName: {{ mattermost_ingress_class }}
  tls:
    - hosts:
        - {{ mattermost_ingress_host }}
      secretName: {{ mattermost_ingress_tls_secret }}
  rules:
    - host: {{ mattermost_ingress_host }}
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: mattermost-team-edition
                port:
                  number: 8065
