apiVersion: autoscaling/v2
kind: HorizontalPodAutoscaler
metadata:
  name: mattermost
  namespace: {{ mattermost_namespace }}
  labels:
    app.kubernetes.io/name: mattermost
    app.kubernetes.io/component: messaging
spec:
  scaleTargetRef:
    apiVersion: apps/v1
    kind: Deployment
    name: mattermost-team-edition
  minReplicas: {{ mattermost_hpa_min_replicas }}
  maxReplicas: {{ mattermost_hpa_max_replicas }}
  metrics:
    - type: Resource
      resource:
        name: cpu
        target:
          type: Utilization
          averageUtilization: {{ mattermost_hpa_target_cpu }}
