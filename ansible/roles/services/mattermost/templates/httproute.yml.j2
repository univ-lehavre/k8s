# Mattermost HTTPRoute with Forward Auth
# Generated by Ansible - Gateway API

# Unprotected API routes (bot tokens, webhooks, plugins)
apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: mattermost-api
  namespace: {{ mattermost_namespace }}
  labels:
    app.kubernetes.io/name: mattermost
    app.kubernetes.io/component: httproute-api
spec:
  parentRefs:
    - name: {{ gateway_name | default('atlas-gateway') }}
      namespace: {{ envoy_gateway_namespace | default('envoy-gateway-system') }}
  hostnames:
    - {{ mattermost_ingress_host }}
  rules:
    - matches:
        - path:
            type: PathPrefix
            value: /api/v4/
      backendRefs:
        - name: mattermost-team-edition
          port: 8065
    - matches:
        - path:
            type: PathPrefix
            value: /plugins/
      backendRefs:
        - name: mattermost-team-edition
          port: 8065
    - matches:
        - path:
            type: PathPrefix
            value: /hooks/
      backendRefs:
        - name: mattermost-team-edition
          port: 8065

---
# Protected UI route (requires authentication)
apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: mattermost
  namespace: {{ mattermost_namespace }}
  labels:
    app.kubernetes.io/name: mattermost
    app.kubernetes.io/component: httproute
spec:
  parentRefs:
    - name: {{ gateway_name | default('atlas-gateway') }}
      namespace: {{ envoy_gateway_namespace | default('envoy-gateway-system') }}
  hostnames:
    - {{ mattermost_ingress_host }}
  rules:
    - matches:
        - path:
            type: PathPrefix
            value: /
      backendRefs:
        - name: mattermost-team-edition
          port: 8065

{% if mattermost_forward_auth_enabled | default(true) %}
---
apiVersion: gateway.envoyproxy.io/v1alpha1
kind: SecurityPolicy
metadata:
  name: mattermost-auth
  namespace: {{ mattermost_namespace }}
  labels:
    app.kubernetes.io/name: mattermost
    app.kubernetes.io/component: security-policy
spec:
  targetRefs:
    - group: gateway.networking.k8s.io
      kind: HTTPRoute
      name: mattermost
  oidc:
    provider:
      issuer: "https://{{ keycloak_host }}/realms/{{ keycloak_realm }}"
    clientID: mattermost
    clientSecret:
      name: mattermost-oidc-secret
    redirectURL: "https://{{ mattermost_ingress_host }}/oauth2/callback"
    scopes:
      - openid
      - profile
      - email
{% endif %}
