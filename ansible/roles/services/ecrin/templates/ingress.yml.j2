# ECRIN Ingress
# Generated by Ansible
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: ecrin
  namespace: {{ ecrin_namespace }}
  annotations:
    cert-manager.io/cluster-issuer: {{ ecrin_ingress_issuer }}
spec:
  ingressClassName: {{ ecrin_ingress_class }}
  tls:
    - hosts:
        - {{ ecrin_ingress_host }}
      secretName: {{ ecrin_ingress_tls_secret }}
  rules:
    - host: {{ ecrin_ingress_host }}
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: ecrin
                port:
                  number: 80
