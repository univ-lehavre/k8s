# ECRIN Deployment
# Generated by Ansible
apiVersion: apps/v1
kind: Deployment
metadata:
  name: ecrin
  namespace: {{ ecrin_namespace }}
  labels:
    app.kubernetes.io/name: ecrin
    app.kubernetes.io/component: web
spec:
  replicas: 1
  selector:
    matchLabels:
      app.kubernetes.io/name: ecrin
  template:
    metadata:
      labels:
        app.kubernetes.io/name: ecrin
        app.kubernetes.io/component: web
    spec:
      securityContext:
        runAsNonRoot: true
        seccompProfile:
          type: RuntimeDefault
      containers:
        - name: ecrin
          image: {{ ecrin_image }}:{{ ecrin_image_tag }}
          ports:
            - containerPort: {{ ecrin_container_port }}
          securityContext:
            allowPrivilegeEscalation: false
            capabilities:
              drop: ["ALL"]
            readOnlyRootFilesystem: true
          resources:
            requests:
              cpu: {{ ecrin_resources.requests.cpu }}
              memory: {{ ecrin_resources.requests.memory }}
            limits:
              cpu: {{ ecrin_resources.limits.cpu }}
              memory: {{ ecrin_resources.limits.memory }}
          envFrom:
            - configMapRef:
                name: ecrin-config
{% if ecrin_oidc_enabled | default(false) %}
            - secretRef:
                name: ecrin-secrets
{% endif %}
          readinessProbe:
            httpGet:
              path: /health
              port: {{ ecrin_container_port }}
            initialDelaySeconds: 10
            periodSeconds: 5
          livenessProbe:
            httpGet:
              path: /health
              port: {{ ecrin_container_port }}
            initialDelaySeconds: 30
            periodSeconds: 10
