apiVersion: autoscaling/v2
kind: HorizontalPodAutoscaler
metadata:
  name: ecrin
  namespace: {{ ecrin_namespace }}
  labels:
    app.kubernetes.io/name: ecrin
    app.kubernetes.io/component: research
spec:
  scaleTargetRef:
    apiVersion: apps/v1
    kind: Deployment
    name: ecrin
  minReplicas: {{ ecrin_hpa_min_replicas }}
  maxReplicas: {{ ecrin_hpa_max_replicas }}
  metrics:
    - type: Resource
      resource:
        name: cpu
        target:
          type: Utilization
          averageUtilization: {{ ecrin_hpa_target_cpu }}
