# ECRIN HTTPRoute with Forward Auth
# Generated by Ansible - Gateway API
apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: ecrin
  namespace: {{ ecrin_namespace }}
  labels:
    app.kubernetes.io/name: ecrin
    app.kubernetes.io/component: httproute
spec:
  parentRefs:
    - name: {{ gateway_name | default('atlas-gateway') }}
      namespace: {{ envoy_gateway_namespace | default('envoy-gateway-system') }}
  hostnames:
    - {{ ecrin_ingress_host }}
  rules:
    - matches:
        - path:
            type: PathPrefix
            value: /
      backendRefs:
        - name: ecrin
          port: 80

{% if ecrin_forward_auth_enabled | default(true) %}
---
apiVersion: gateway.envoyproxy.io/v1alpha1
kind: SecurityPolicy
metadata:
  name: ecrin-auth
  namespace: {{ ecrin_namespace }}
  labels:
    app.kubernetes.io/name: ecrin
    app.kubernetes.io/component: security-policy
spec:
  targetRefs:
    - group: gateway.networking.k8s.io
      kind: HTTPRoute
      name: ecrin
  oidc:
    provider:
      issuer: "https://{{ keycloak_host }}/realms/{{ keycloak_realm }}"
    clientID: ecrin
    clientSecret:
      name: ecrin-oidc-secret
    redirectURL: "https://{{ ecrin_ingress_host }}/oauth2/callback"
    scopes:
      - openid
      - profile
      - email
{% endif %}
