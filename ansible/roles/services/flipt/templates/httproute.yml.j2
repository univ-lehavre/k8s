# Flipt HTTPRoute with Forward Auth
# Generated by Ansible - Gateway API
apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: flipt
  namespace: {{ flipt_namespace }}
  labels:
    app.kubernetes.io/name: flipt
    app.kubernetes.io/component: httproute
spec:
  parentRefs:
    - name: {{ gateway_name | default('atlas-gateway') }}
      namespace: {{ envoy_gateway_namespace | default('envoy-gateway-system') }}
  hostnames:
    - {{ flipt_ingress_host }}
  rules:
    - matches:
        - path:
            type: PathPrefix
            value: /
      backendRefs:
        - name: flipt
          port: 8080

{% if flipt_forward_auth_enabled | default(true) %}
---
apiVersion: gateway.envoyproxy.io/v1alpha1
kind: SecurityPolicy
metadata:
  name: flipt-auth
  namespace: {{ flipt_namespace }}
  labels:
    app.kubernetes.io/name: flipt
    app.kubernetes.io/component: security-policy
spec:
  targetRefs:
    - group: gateway.networking.k8s.io
      kind: HTTPRoute
      name: flipt
  oidc:
    provider:
      issuer: "https://{{ keycloak_host }}/realms/{{ keycloak_realm }}"
    clientID: flipt
    clientSecret:
      name: flipt-oidc-secret
    redirectURL: "https://{{ flipt_ingress_host }}/oauth2/callback"
    scopes:
      - openid
      - profile
      - email
{% endif %}
