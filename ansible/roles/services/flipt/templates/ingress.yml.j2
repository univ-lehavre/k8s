# Flipt Ingress
# Generated by Ansible
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: flipt
  namespace: {{ flipt_namespace }}
  annotations:
    cert-manager.io/cluster-issuer: {{ flipt_ingress_issuer }}
spec:
  ingressClassName: {{ flipt_ingress_class }}
  tls:
    - hosts:
        - {{ flipt_ingress_host }}
      secretName: {{ flipt_ingress_tls_secret }}
  rules:
    - host: {{ flipt_ingress_host }}
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: flipt
                port:
                  number: 8080
