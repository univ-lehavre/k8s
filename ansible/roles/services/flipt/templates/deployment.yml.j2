# Flipt Deployment
# Generated by Ansible
apiVersion: apps/v1
kind: Deployment
metadata:
  name: flipt
  namespace: {{ flipt_namespace }}
  labels:
    app.kubernetes.io/name: flipt
    app.kubernetes.io/component: feature-flags
spec:
  replicas: 1
  selector:
    matchLabels:
      app.kubernetes.io/name: flipt
  template:
    metadata:
      labels:
        app.kubernetes.io/name: flipt
        app.kubernetes.io/component: feature-flags
    spec:
      securityContext:
        runAsNonRoot: true
        seccompProfile:
          type: RuntimeDefault
      containers:
        - name: flipt
          image: {{ flipt_image }}:{{ flipt_image_tag }}
          ports:
            - name: http
              containerPort: 8080
            - name: grpc
              containerPort: 9000
          securityContext:
            allowPrivilegeEscalation: false
            capabilities:
              drop: ["ALL"]
            readOnlyRootFilesystem: true
          resources:
            requests:
              cpu: {{ flipt_resources.requests.cpu }}
              memory: {{ flipt_resources.requests.memory }}
            limits:
              cpu: {{ flipt_resources.limits.cpu }}
              memory: {{ flipt_resources.limits.memory }}
          env:
{% if flipt_database_enabled %}
            - name: FLIPT_DB_URL
              valueFrom:
                secretKeyRef:
                  name: flipt-credentials
                  key: database-url
{% endif %}
          volumeMounts:
            - name: config
              mountPath: /etc/flipt/config
              readOnly: true
          readinessProbe:
            httpGet:
              path: /health
              port: 8080
            initialDelaySeconds: 5
            periodSeconds: 5
          livenessProbe:
            httpGet:
              path: /health
              port: 8080
            initialDelaySeconds: 10
            periodSeconds: 10
      volumes:
        - name: config
          configMap:
            name: flipt-config
