# REDCap HTTPRoute with Forward Auth
# Generated by Ansible - Gateway API

# Public surveys route (no auth - external respondents)
apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: redcap-public
  namespace: {{ redcap_namespace }}
  labels:
    app.kubernetes.io/name: redcap
    app.kubernetes.io/component: httproute-public
spec:
  parentRefs:
    - name: {{ gateway_name | default('atlas-gateway') }}
      namespace: {{ envoy_gateway_namespace | default('envoy-gateway-system') }}
  hostnames:
    - {{ redcap_ingress_host }}
  rules:
    - matches:
        - path:
            type: PathPrefix
            value: /surveys
      backendRefs:
        - name: redcap
          port: 80

---
# Protected route (requires authentication)
apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: redcap
  namespace: {{ redcap_namespace }}
  labels:
    app.kubernetes.io/name: redcap
    app.kubernetes.io/component: httproute
spec:
  parentRefs:
    - name: {{ gateway_name | default('atlas-gateway') }}
      namespace: {{ envoy_gateway_namespace | default('envoy-gateway-system') }}
  hostnames:
    - {{ redcap_ingress_host }}
  rules:
    - matches:
        - path:
            type: PathPrefix
            value: /
      backendRefs:
        - name: redcap
          port: 80

{% if redcap_forward_auth_enabled | default(true) %}
---
apiVersion: gateway.envoyproxy.io/v1alpha1
kind: SecurityPolicy
metadata:
  name: redcap-auth
  namespace: {{ redcap_namespace }}
  labels:
    app.kubernetes.io/name: redcap
    app.kubernetes.io/component: security-policy
spec:
  targetRefs:
    - group: gateway.networking.k8s.io
      kind: HTTPRoute
      name: redcap
  oidc:
    provider:
      issuer: "https://{{ keycloak_host }}/realms/{{ keycloak_realm }}"
    clientID: redcap
    clientSecret:
      name: redcap-oidc-secret
    redirectURL: "https://{{ redcap_ingress_host }}/oauth2/callback"
    scopes:
      - openid
      - profile
      - email
{% endif %}
