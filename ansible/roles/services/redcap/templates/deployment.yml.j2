# REDCap Deployment
# Generated by Ansible
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: redcap-data
  namespace: {{ redcap_namespace }}
spec:
  accessModes:
    - ReadWriteOnce
  storageClassName: {{ redcap_storage_class }}
  resources:
    requests:
      storage: {{ redcap_storage_size }}
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: redcap
  namespace: {{ redcap_namespace }}
  labels:
    app: redcap
spec:
  replicas: 1
  selector:
    matchLabels:
      app: redcap
  template:
    metadata:
      labels:
        app: redcap
    spec:
      containers:
        - name: redcap
          image: {{ redcap_image }}:{{ redcap_image_tag }}
          ports:
            - containerPort: 80
          resources:
            requests:
              cpu: {{ redcap_resources.requests.cpu }}
              memory: {{ redcap_resources.requests.memory }}
            limits:
              cpu: {{ redcap_resources.limits.cpu }}
              memory: {{ redcap_resources.limits.memory }}
          env:
            - name: REDCAP_DB_HOST
              value: "{{ redcap_postgresql_host }}"
            - name: REDCAP_DB_PORT
              value: "{{ redcap_postgresql_port | string }}"
            - name: REDCAP_DB_NAME
              value: "{{ redcap_postgresql_database }}"
            - name: REDCAP_DB_USER
              value: "{{ redcap_postgresql_user }}"
            - name: REDCAP_DB_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: redcap-credentials
                  key: db-password
            - name: REDCAP_SALT
              valueFrom:
                secretKeyRef:
                  name: redcap-credentials
                  key: salt
          volumeMounts:
            - name: data
              mountPath: /var/www/html/edocs
          readinessProbe:
            httpGet:
              path: /
              port: 80
            initialDelaySeconds: 30
            periodSeconds: 10
          livenessProbe:
            httpGet:
              path: /
              port: 80
            initialDelaySeconds: 60
            periodSeconds: 30
      volumes:
        - name: data
          persistentVolumeClaim:
            claimName: redcap-data
