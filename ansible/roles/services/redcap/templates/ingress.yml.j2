# REDCap Ingress with Forward Auth
# Generated by Ansible
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: redcap
  namespace: {{ redcap_namespace }}
  annotations:
    cert-manager.io/cluster-issuer: {{ redcap_ingress_issuer }}
{% if redcap_forward_auth_enabled %}
    nginx.ingress.kubernetes.io/auth-url: "http://authelia.authelia.svc.cluster.local/api/verify?rd=https://login.{{ domain }}"
    nginx.ingress.kubernetes.io/auth-signin: "https://login.{{ domain }}/?rd=$escaped_request_uri"
    nginx.ingress.kubernetes.io/auth-response-headers: "Remote-User,Remote-Groups,Remote-Email,Remote-Name"
    nginx.ingress.kubernetes.io/auth-snippet: |
      proxy_set_header X-Forwarded-Host $http_host;
{% endif %}
spec:
  ingressClassName: {{ redcap_ingress_class }}
  tls:
    - hosts:
        - {{ redcap_ingress_host }}
      secretName: {{ redcap_ingress_tls_secret }}
  rules:
    - host: {{ redcap_ingress_host }}
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: redcap
                port:
                  number: 80
