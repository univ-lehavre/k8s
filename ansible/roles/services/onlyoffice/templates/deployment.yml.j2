# OnlyOffice Deployment
# Generated by Ansible
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: onlyoffice-data
  namespace: {{ onlyoffice_namespace }}
spec:
  accessModes:
    - ReadWriteOnce
  storageClassName: {{ onlyoffice_storage_class }}
  resources:
    requests:
      storage: {{ onlyoffice_storage_size }}
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: onlyoffice
  namespace: {{ onlyoffice_namespace }}
  labels:
    app.kubernetes.io/name: onlyoffice
    app.kubernetes.io/component: office
spec:
  replicas: 1
  selector:
    matchLabels:
      app.kubernetes.io/name: onlyoffice
  template:
    metadata:
      labels:
        app.kubernetes.io/name: onlyoffice
        app.kubernetes.io/component: office
    spec:
      securityContext:
        seccompProfile:
          type: RuntimeDefault
      containers:
        - name: onlyoffice
          image: {{ onlyoffice_image }}:{{ onlyoffice_image_tag }}
          ports:
            - containerPort: 80
          securityContext:
            allowPrivilegeEscalation: false
            capabilities:
              drop: ["ALL"]
          resources:
            requests:
              cpu: {{ onlyoffice_resources.requests.cpu }}
              memory: {{ onlyoffice_resources.requests.memory }}
            limits:
              cpu: {{ onlyoffice_resources.limits.cpu }}
              memory: {{ onlyoffice_resources.limits.memory }}
          env:
            - name: JWT_ENABLED
              value: "{{ onlyoffice_jwt_enabled | lower }}"
            - name: JWT_SECRET
              valueFrom:
                secretKeyRef:
                  name: onlyoffice-credentials
                  key: jwt-secret
            - name: JWT_HEADER
              value: "{{ onlyoffice_jwt_header }}"
{% if onlyoffice_wopi_enabled %}
            - name: WOPI_ENABLED
              value: "true"
{% endif %}
          volumeMounts:
            - name: data
              mountPath: /var/www/onlyoffice/Data
            - name: logs
              mountPath: /var/log/onlyoffice
          readinessProbe:
            httpGet:
              path: /healthcheck
              port: 80
            initialDelaySeconds: 30
            periodSeconds: 10
          livenessProbe:
            httpGet:
              path: /healthcheck
              port: 80
            initialDelaySeconds: 60
            periodSeconds: 30
      volumes:
        - name: data
          persistentVolumeClaim:
            claimName: onlyoffice-data
        - name: logs
          emptyDir: {}
