# OnlyOffice HTTPRoute with Forward Auth
# Generated by Ansible - Gateway API

# Unprotected callback route (Nextcloud co-editing callbacks)
apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: onlyoffice-callback
  namespace: {{ onlyoffice_namespace }}
  labels:
    app.kubernetes.io/name: onlyoffice
    app.kubernetes.io/component: httproute-callback
spec:
  parentRefs:
    - name: {{ gateway_name | default('atlas-gateway') }}
      namespace: {{ envoy_gateway_namespace | default('envoy-gateway-system') }}
  hostnames:
    - {{ onlyoffice_ingress_host }}
  rules:
    - matches:
        - path:
            type: PathPrefix
            value: /coauthoring/
      backendRefs:
        - name: onlyoffice-documentserver
          port: 80

---
# Protected UI route (requires authentication)
apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: onlyoffice
  namespace: {{ onlyoffice_namespace }}
  labels:
    app.kubernetes.io/name: onlyoffice
    app.kubernetes.io/component: httproute
spec:
  parentRefs:
    - name: {{ gateway_name | default('atlas-gateway') }}
      namespace: {{ envoy_gateway_namespace | default('envoy-gateway-system') }}
  hostnames:
    - {{ onlyoffice_ingress_host }}
  rules:
    - matches:
        - path:
            type: PathPrefix
            value: /
      backendRefs:
        - name: onlyoffice-documentserver
          port: 80

{% if onlyoffice_forward_auth_enabled | default(true) %}
---
apiVersion: gateway.envoyproxy.io/v1alpha1
kind: SecurityPolicy
metadata:
  name: onlyoffice-auth
  namespace: {{ onlyoffice_namespace }}
  labels:
    app.kubernetes.io/name: onlyoffice
    app.kubernetes.io/component: security-policy
spec:
  targetRefs:
    - group: gateway.networking.k8s.io
      kind: HTTPRoute
      name: onlyoffice
  oidc:
    provider:
      issuer: "https://{{ keycloak_host }}/realms/{{ keycloak_realm }}"
    clientID: onlyoffice
    clientSecret:
      name: onlyoffice-oidc-secret
    redirectURL: "https://{{ onlyoffice_ingress_host }}/oauth2/callback"
    scopes:
      - openid
      - profile
      - email
{% endif %}
