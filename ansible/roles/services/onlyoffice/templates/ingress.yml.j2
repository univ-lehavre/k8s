# OnlyOffice Ingress
# Generated by Ansible
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: onlyoffice
  namespace: {{ onlyoffice_namespace }}
  annotations:
    cert-manager.io/cluster-issuer: {{ onlyoffice_ingress_issuer }}
    nginx.ingress.kubernetes.io/proxy-body-size: 100m
spec:
  ingressClassName: {{ onlyoffice_ingress_class }}
  tls:
    - hosts:
        - {{ onlyoffice_ingress_host }}
      secretName: {{ onlyoffice_ingress_tls_secret }}
  rules:
    - host: {{ onlyoffice_ingress_host }}
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: onlyoffice
                port:
                  number: 80
