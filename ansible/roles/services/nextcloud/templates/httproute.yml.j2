# Nextcloud HTTPRoute with Forward Auth
# Generated by Ansible - Gateway API

# Unprotected API routes (WebDAV/CalDAV/CardDAV clients with app passwords)
apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: nextcloud-api
  namespace: {{ nextcloud_namespace }}
  labels:
    app.kubernetes.io/name: nextcloud
    app.kubernetes.io/component: httproute-api
spec:
  parentRefs:
    - name: {{ gateway_name | default('atlas-gateway') }}
      namespace: {{ envoy_gateway_namespace | default('envoy-gateway-system') }}
  hostnames:
    - {{ nextcloud_ingress_host }}
  rules:
    - matches:
        - path:
            type: PathPrefix
            value: /remote.php/dav/
      backendRefs:
        - name: nextcloud
          port: 8080
      timeouts:
        request: 600s
        backendRequest: 600s
    - matches:
        - path:
            type: PathPrefix
            value: /ocs/
      backendRefs:
        - name: nextcloud
          port: 8080
    - matches:
        - path:
            type: PathPrefix
            value: /.well-known/
      backendRefs:
        - name: nextcloud
          port: 8080

---
# Protected UI route (requires authentication)
apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: nextcloud
  namespace: {{ nextcloud_namespace }}
  labels:
    app.kubernetes.io/name: nextcloud
    app.kubernetes.io/component: httproute
spec:
  parentRefs:
    - name: {{ gateway_name | default('atlas-gateway') }}
      namespace: {{ envoy_gateway_namespace | default('envoy-gateway-system') }}
  hostnames:
    - {{ nextcloud_ingress_host }}
  rules:
    - matches:
        - path:
            type: PathPrefix
            value: /
      backendRefs:
        - name: nextcloud
          port: 8080
      timeouts:
        request: 600s
        backendRequest: 600s

{% if nextcloud_forward_auth_enabled | default(true) %}
---
apiVersion: gateway.envoyproxy.io/v1alpha1
kind: SecurityPolicy
metadata:
  name: nextcloud-auth
  namespace: {{ nextcloud_namespace }}
  labels:
    app.kubernetes.io/name: nextcloud
    app.kubernetes.io/component: security-policy
spec:
  targetRefs:
    - group: gateway.networking.k8s.io
      kind: HTTPRoute
      name: nextcloud
  oidc:
    provider:
      issuer: "https://{{ keycloak_host }}/realms/{{ keycloak_realm }}"
    clientID: nextcloud
    clientSecret:
      name: nextcloud-oidc-secret
    redirectURL: "https://{{ nextcloud_ingress_host }}/oauth2/callback"
    scopes:
      - openid
      - profile
      - email
{% endif %}

---
# Backend traffic policy for large file uploads
apiVersion: gateway.envoyproxy.io/v1alpha1
kind: BackendTrafficPolicy
metadata:
  name: nextcloud-uploads
  namespace: {{ nextcloud_namespace }}
spec:
  targetRefs:
    - group: gateway.networking.k8s.io
      kind: HTTPRoute
      name: nextcloud
    - group: gateway.networking.k8s.io
      kind: HTTPRoute
      name: nextcloud-api
  timeout:
    http:
      requestTimeout: 600s
