# Hubble UI HTTPRoute with Forward Auth via Authelia
# Generated by Ansible - Gateway API
apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: hubble-ui
  namespace: {{ hubble_ui_namespace | default('kube-system') }}
  labels:
    app.kubernetes.io/name: hubble-ui
    app.kubernetes.io/component: httproute
spec:
  parentRefs:
    - name: {{ gateway_name | default('atlas-gateway') }}
      namespace: {{ envoy_gateway_namespace | default('envoy-gateway-system') }}
  hostnames:
    - {{ hubble_ui_ingress_host }}
  rules:
    - matches:
        - path:
            type: PathPrefix
            value: /
      backendRefs:
        - name: hubble-ui
          port: 80

{% if hubble_ui_forward_auth_enabled | default(true) %}
---
# SecurityPolicy for forward auth via Authelia
apiVersion: gateway.envoyproxy.io/v1alpha1
kind: SecurityPolicy
metadata:
  name: hubble-ui-auth
  namespace: {{ hubble_ui_namespace | default('kube-system') }}
  labels:
    app.kubernetes.io/name: hubble-ui
    app.kubernetes.io/component: security-policy
spec:
  targetRefs:
    - group: gateway.networking.k8s.io
      kind: HTTPRoute
      name: hubble-ui
  extAuth:
    http:
      backendRefs:
        - name: authelia
          namespace: {{ authelia_namespace | default('authelia') }}
          port: 9091
      path: /api/authz/ext-authz
      headersToBackend:
        - Remote-User
        - Remote-Groups
        - Remote-Email
        - Remote-Name
    headersToExtAuth:
      - cookie
      - authorization
      - proxy-authorization
      - x-forwarded-proto
      - x-forwarded-host
      - x-forwarded-uri
      - x-forwarded-for
    failOpen: false
{% endif %}
