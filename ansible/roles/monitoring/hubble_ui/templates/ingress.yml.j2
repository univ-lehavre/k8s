# Hubble UI Ingress
# Generated by Ansible
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: hubble-ui
  namespace: {{ hubble_namespace }}
  annotations:
    cert-manager.io/cluster-issuer: {{ hubble_ui_ingress_issuer }}
{% if hubble_ui_forward_auth_enabled %}
    nginx.ingress.kubernetes.io/auth-url: "{{ hubble_ui_forward_auth_address }}"
    nginx.ingress.kubernetes.io/auth-signin: "https://login.{{ domain }}/?rd=$escaped_request_uri"
    nginx.ingress.kubernetes.io/auth-response-headers: "Remote-User,Remote-Groups,Remote-Email,Remote-Name"
{% endif %}
spec:
  ingressClassName: {{ hubble_ui_ingress_class }}
  tls:
    - hosts:
        - {{ hubble_ui_ingress_host }}
      secretName: {{ hubble_ui_ingress_tls_secret }}
  rules:
    - host: {{ hubble_ui_ingress_host }}
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: hubble-ui
                port:
                  number: 80
