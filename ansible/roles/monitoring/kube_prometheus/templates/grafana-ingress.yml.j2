# Grafana Ingress
# Generated by Ansible
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: grafana
  namespace: {{ prometheus_namespace }}
  annotations:
    cert-manager.io/cluster-issuer: {{ grafana_ingress_issuer }}
spec:
  ingressClassName: {{ grafana_ingress_class }}
  tls:
    - hosts:
        - {{ grafana_ingress_host }}
      secretName: {{ grafana_ingress_tls_secret }}
  rules:
    - host: {{ grafana_ingress_host }}
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: kube-prometheus-stack-grafana
                port:
                  number: 80
