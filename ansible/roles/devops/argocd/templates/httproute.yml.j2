# ArgoCD HTTPRoute with Forward Auth
# Generated by Ansible - Gateway API

# Unprotected webhook route (Git webhooks from Gitea)
apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: argocd-webhook
  namespace: {{ argocd_namespace }}
  labels:
    app.kubernetes.io/name: argocd
    app.kubernetes.io/component: httproute-webhook
spec:
  parentRefs:
    - name: {{ gateway_name | default('atlas-gateway') }}
      namespace: {{ envoy_gateway_namespace | default('envoy-gateway-system') }}
  hostnames:
    - {{ argocd_ingress_host }}
  rules:
    - matches:
        - path:
            type: PathPrefix
            value: /api/webhook
      backendRefs:
        - name: argocd-server
          port: 80

---
# Protected UI route (requires Authelia)
apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: argocd
  namespace: {{ argocd_namespace }}
  labels:
    app.kubernetes.io/name: argocd
    app.kubernetes.io/component: httproute
spec:
  parentRefs:
    - name: {{ gateway_name | default('atlas-gateway') }}
      namespace: {{ envoy_gateway_namespace | default('envoy-gateway-system') }}
  hostnames:
    - {{ argocd_ingress_host }}
  rules:
    - matches:
        - path:
            type: PathPrefix
            value: /
      backendRefs:
        - name: argocd-server
          port: 80

{% if argocd_forward_auth_enabled | default(true) %}
---
apiVersion: gateway.envoyproxy.io/v1alpha1
kind: SecurityPolicy
metadata:
  name: argocd-auth
  namespace: {{ argocd_namespace }}
  labels:
    app.kubernetes.io/name: argocd
    app.kubernetes.io/component: security-policy
spec:
  targetRefs:
    - group: gateway.networking.k8s.io
      kind: HTTPRoute
      name: argocd
{% if keycloak_enabled | default(false) %}
  oidc:
    provider:
      issuer: "https://{{ keycloak_host | default('login.' + domain) }}/realms/{{ keycloak_realm | default('atlas') }}"
    clientID: argocd
    clientSecret:
      name: argocd-oidc-secret
    redirectURL: "https://{{ argocd_ingress_host }}/oauth2/callback"
    scopes:
      - openid
      - profile
      - email
{% else %}
  extAuth:
    http:
      backendRefs:
        - name: authelia
          namespace: {{ authelia_namespace | default('authelia') }}
          port: 9091
      path: /api/authz/ext-authz
      headersToBackend:
        - Remote-User
        - Remote-Groups
        - Remote-Email
        - Remote-Name
    headersToExtAuth:
      - cookie
      - authorization
      - proxy-authorization
      - x-forwarded-proto
      - x-forwarded-host
      - x-forwarded-uri
      - x-forwarded-for
    failOpen: false
{% endif %}
{% endif %}
