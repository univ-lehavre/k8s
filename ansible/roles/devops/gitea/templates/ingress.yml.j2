# Gitea Ingress
# Generated by Ansible
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: gitea
  namespace: {{ gitea_namespace }}
  annotations:
    cert-manager.io/cluster-issuer: {{ gitea_ingress_issuer }}
    nginx.ingress.kubernetes.io/proxy-body-size: 512m
spec:
  ingressClassName: {{ gitea_ingress_class }}
  tls:
    - hosts:
        - {{ gitea_ingress_host }}
      secretName: {{ gitea_ingress_tls_secret }}
  rules:
    - host: {{ gitea_ingress_host }}
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: gitea-http
                port:
                  number: 3000
