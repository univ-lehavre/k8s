# Gitea HTTPRoute with Forward Auth
# Generated by Ansible - Gateway API

# Unprotected API routes (Git operations, webhooks, OIDC discovery)
apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: gitea-api
  namespace: {{ gitea_namespace }}
  labels:
    app.kubernetes.io/name: gitea
    app.kubernetes.io/component: httproute-api
spec:
  parentRefs:
    - name: {{ gateway_name | default('atlas-gateway') }}
      namespace: {{ envoy_gateway_namespace | default('envoy-gateway-system') }}
  hostnames:
    - {{ gitea_ingress_host }}
  rules:
    - matches:
        - path:
            type: PathPrefix
            value: /api/v1/
      backendRefs:
        - name: gitea-http
          port: 3000
    - matches:
        - path:
            type: PathPrefix
            value: /.well-known/
      backendRefs:
        - name: gitea-http
          port: 3000

---
# Protected UI route (requires Authelia)
apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: gitea
  namespace: {{ gitea_namespace }}
  labels:
    app.kubernetes.io/name: gitea
    app.kubernetes.io/component: httproute
spec:
  parentRefs:
    - name: {{ gateway_name | default('atlas-gateway') }}
      namespace: {{ envoy_gateway_namespace | default('envoy-gateway-system') }}
  hostnames:
    - {{ gitea_ingress_host }}
  rules:
    - matches:
        - path:
            type: PathPrefix
            value: /
      backendRefs:
        - name: gitea-http
          port: 3000

{% if gitea_forward_auth_enabled | default(true) %}
---
apiVersion: gateway.envoyproxy.io/v1alpha1
kind: SecurityPolicy
metadata:
  name: gitea-auth
  namespace: {{ gitea_namespace }}
  labels:
    app.kubernetes.io/name: gitea
    app.kubernetes.io/component: security-policy
spec:
  targetRefs:
    - group: gateway.networking.k8s.io
      kind: HTTPRoute
      name: gitea
{% if keycloak_enabled | default(false) %}
  oidc:
    provider:
      issuer: "https://{{ keycloak_host | default('login.' + domain) }}/realms/{{ keycloak_realm | default('atlas') }}"
    clientID: gitea
    clientSecret:
      name: gitea-oidc-secret
    redirectURL: "https://{{ gitea_ingress_host }}/oauth2/callback"
    scopes:
      - openid
      - profile
      - email
{% else %}
  extAuth:
    http:
      backendRefs:
        - name: authelia
          namespace: {{ authelia_namespace | default('authelia') }}
          port: 9091
      path: /api/authz/ext-authz
      headersToBackend:
        - Remote-User
        - Remote-Groups
        - Remote-Email
        - Remote-Name
    headersToExtAuth:
      - cookie
      - authorization
      - proxy-authorization
      - x-forwarded-proto
      - x-forwarded-host
      - x-forwarded-uri
      - x-forwarded-for
    failOpen: false
{% endif %}
{% endif %}

---
# Backend traffic policy for git push (large repos)
apiVersion: gateway.envoyproxy.io/v1alpha1
kind: BackendTrafficPolicy
metadata:
  name: gitea-uploads
  namespace: {{ gitea_namespace }}
spec:
  targetRefs:
    - group: gateway.networking.k8s.io
      kind: HTTPRoute
      name: gitea
    - group: gateway.networking.k8s.io
      kind: HTTPRoute
      name: gitea-api
  timeout:
    http:
      requestTimeout: 300s
