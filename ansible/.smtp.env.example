# SMTP Configuration (Shared across all environments)
# Copy this file to .smtp.env and fill in your SMTP provider details
# This file will be sourced by generate-env.sh

# SMTP server hostname (e.g., smtp-relay.brevo.com, smtp.gmail.com)
export SMTP_HOST="smtp.example.com"

# SMTP server port (587 for STARTTLS, 465 for SSL)
export SMTP_PORT="587"

# SMTP username (usually your email address or API username)
export SMTP_USER="your-smtp-username"

# SMTP password or API key
export SMTP_PASSWORD="your-smtp-password"

# From address for outgoing emails
export SMTP_FROM="noreply@example.com"
